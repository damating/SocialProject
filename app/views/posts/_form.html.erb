<%= form_for @post, :html => {:multipart => true} do |f| %>


    <%= f.label :post %><br>
    <%= f.text_field :post, class: 'form-control'%>

    <%= f.label :description %><br>
    <%= f.text_field :description, class: 'form-control'%>

    <%= f.file_field :picture %>


    <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
