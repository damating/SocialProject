ï»¿    <div class="middle-box text-center loginscreen   animated fadeInDown">
  <div>
    <div>

      <h1 class="logo-name">MU</h1>

    </div>
    <h3>Register to MeetUp</h3>
    <p>Create account to see it in action.</p>

    <%= form_for @user, :html => {:class => 'm-t'}  do |f| %>
        <div class="form-group">
          <%= f.text_field :user_name, class: 'form-control', placeholder: 'User name' %>
        </div>
        <div class="form-group">
          <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
        </div>
        <div class="form-group">
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
        <div class="form-group">
          <div class="checkbox"><label> <input type="checkbox"><i></i> Agree the terms and policy </label></div>
        </div>
        <div class="actions">
          <%= f.submit "Register", class: 'btn btn-primary block full-width m-b' %>
        </div>
    <% end %>

    <p class="text-muted text-center"><small>Already have an account?</small></p>
    <a class="btn btn-sm btn-white btn-block" href="#">Login</a>

  </div>
</div>




