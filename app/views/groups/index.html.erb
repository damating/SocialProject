<%= link_to "Add group", new_group_path, class: "btn btn-lg btn-primary" %>


<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <% @groups.each do |group| %>
    <div class="col-lg-4">
      <div class="ibox">
        <div class="ibox-title">
          <span class="label label-primary pull-right">NEW</span>
          <h5><%= link_to group.title, group_path(group) %></h5>
          Created by: <%= group.owner.user_name %>
        </div>
        <div class="ibox-content">
          <div class="team-members">
            <%= image_tag(group.owner.picture, :width => 300, :hight => 300, :class => "img-circle") %>
