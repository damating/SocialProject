            <!--<a href="#"><img alt="member" class="img-circle" src="" data-pin-nopin="true"></a>-->
            <!--<a href="#"><img alt="member" class="img-circle" src=""></a>-->
          </div>
          <h4>Description</h4>

          <p>
            <%= group.description %>
          </p>
          <div class="row  m-t-sm">
            <div class="col-sm-4">
              <div class="font-bold">MEMBERS</div>
              12
            </div>
          </div>

        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

